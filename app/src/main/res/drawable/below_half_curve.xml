        <shape android:shape="rectangle">
            <solid android:color="#45444c" />
            <corners
               android:bottomRightRadius="15dp"
                android:bottomLeftRadius="15dp"/>
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#45444c" />
            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                 />
        </shape>
    </item>
</layer-list>